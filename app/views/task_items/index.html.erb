<p id="notice"><%= notice %></p>

<h1>Task Items</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_items.each do |task_item| %>
      <tr>
        <td><%= task_item.description %></td>
        <td><%= link_to 'Show', task_item, class: 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_task_item_path(task_item), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', task_item, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task Item', new_task_item_path, class: 'btn btn-info' %>
